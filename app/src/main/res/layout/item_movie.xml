<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ImageView
        android:layout_height="@dimen/activity_poster_height"
        android:scaleType="fitXY"
        android:id="@+id/ivPoster"
        android:adjustViewBounds="true"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_width="@dimen/activity_poster_width"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTitle"
        android:padding="10dp"
        android:textSize="@dimen/title_size"
        android:textColor="@color/colorSecondary"
        android:minLines="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/ivPoster"
        android:layout_alignTop="@id/ivPoster"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvOverview"
        android:textColorLink="?android:attr/textColorPrimaryInverse"
        android:textColor="@color/colorSecondaryText"
        android:layout_toRightOf="@id/ivPoster"
        android:minLines="1"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_below="@id/tvTitle"
        android:layout_alignBottom="@id/ivPoster"
        android:layout_marginLeft="5dp"
        android:alpha="0.8"/>
</RelativeLayout>